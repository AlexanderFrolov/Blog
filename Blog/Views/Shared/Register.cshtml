@model Blog.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<form method="post" asp-controller="Register" asp-action="Register">
    <!-- style="padding: 7% 35% 0%;" -->
    <fieldset>
            
        <div class="container">
            <!-- style="padding-top: 10%;" -->
            <main  role="main" class="pb-3">

                <legend>Register user</legend>

                <div class="form-group">    

                   
                        
                    <div class="row">
                        <div class="form-floating mb-3 col-lg-6">
                            <input asp-for="FirstName" type="text" class="form-control" id="floatingInputFirstName" placeholder="write your First Name">
                            <label for="floatingInputFirstName">First Name</label>
                            <span asp-validation-for="FirstName"></span>
                           @* <small id="emailHelp" class="form-text text-muted">Minimum length is 8 characters.</small>*@
                        </div>
                        <div class="form-floating mb-3 col-lg-6">
                            <input asp-for="LastName" type="text" class="form-control" id="floatingInputLastName" placeholder="write your Last Name">
                            <label for="floatingInputLastName">Last Name</label>
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                        
                    <div class="form-floating mb-3">
                        <input asp-for="Login" type="text" class="form-control" id="floatingInputLogin" placeholder="User Name">
                        <label for="floatingInputLogin">User Name</label>
                         <span asp-validation-for="Login"></span>
                        @*<small id="UserNamelHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="EmailReg" type="email"  class="form-control"  id="floatingInputEmail" placeholder="name@example.com">
                        <label for="floatingInputEmail">Email address</label>
                        <span asp-validation-for="EmailReg"></span>
                       @* <div class="valid-feedback">such email is free</div>*@
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PasswordReg" type="password" class="form-control" id="floatingInputPassword" placeholder="Password">
                        <label for="floatingInputPassword">Password</label>
                         <span asp-validation-for="PasswordReg"></span>
                       @* <div class="invalid-feedback">sorry, wrong password. try another?</div>*@
                    </div>
                        <div class="form-floating mb-3">
                        <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingInputPasswordConfirm" placeholder="PasswordConfirm">
                        <label for="floatingInputPasswordConfirm">Password confirm</label>
                         <span asp-validation-for="PasswordConfirm"></span>
                       @* <div class="invalid-feedback">sorry, wrong password. try another?</div>*@
                    </div>

                     <div asp-validation-summary="ModelOnly"></div>

                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div class="col-lg-9" style="padding-left: 52%;">
                        <p class="text-primary">Already have login and password?</p>                                                   
                    </div>
                    <div class="col-lg-1">
                            <p>                           
                             @Html.RouteLink("Sign In", new { action = "Index", controller="Home"}, new { @class="text-info"} )
                            </p>
                    </div>   

                </div>
                        
                </div>

            </main>                                         
        </div> 
    </fieldset>
</form>


